/* pages/topic/topic.wxss */
.wrap{
  width: 100%;
  text-align: center;
  background: #fff;
}
.title{
  margin: 1em 0 0.4em 0;
  font-size: 0.9em;
  color: #333;
  font-weight: 700;
  display: block;
}
.author{
  font-size: 0.8em;
  color: #777;
  display: block;
}
.imgwrap{
  width: 10em;
  height: 10em;
  margin: 0.8em auto;
}
.imgwrap image{
  width: 100%;
  height: 100%;
}
.wrap .desc{
  width: 90%;
  color:#666;
  display: inline-block;
  text-align: left;
  font-size: 0.8em;
  padding-bottom: 1em;
}
.remarks{
  width:100%;
  padding:1em 0;
}
.remarks .linewrap{
  width:90%;
  margin: 0.4em auto;
  display: flex;
}
.remarks .linewrap label{
  font-size: 0.8em;
  color: #666;
  padding: 0 0.6em;
  vertical-align: center;
}
.remarks .linewrap .line{
  flex: 1;
  width: 100%;
  height: 1px;
  position: relative;
  top:0.5em;
  left:0;
  background: #666;
  transform: scaleY(0.5);
}
.remarks .comment{
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: flex-end;
  color:#607FA6;
  font-size: 0.7em;
  margin-bottom: 0.6em;
  padding: 0.4em 0 0.4em 0.4em;
}
.remarks .remark{
  display: flex;
  width: 90%;
  margin:0 auto;
  margin-bottom: 0.4em;
  justify-content: row;
}
.remarks .remark image{
  width:3em;
  height: 3em;
  margin-right: 0.8em;
  display: inline-block;
}
.remarks .remark .main{
  flex: 1;
}
.remarks .remark .main label.username{
  display: block;
  font-size: 0.8em;
  color:#333;
}
.remarks .remark .main .content{
  font-size: 0.7em;
  color:#666;
}
.remarks .remark .main .time{
  display: block;
  font-size: 0.7em;
  color:#999;
}