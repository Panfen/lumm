<view class="container">
  <view class="filter-wrap">
    <button size="mini" class="{{currentType === '0' ? 'select' : ''}}" data-type="0" bindtap="onChangeType">全部</button>
    <button size="mini" class="{{currentType === '1' ? 'select' : ''}}"  data-type="1" bindtap="onChangeType">日常</button>
    <button size="mini" class="{{currentType === '2' ? 'select' : ''}}"  data-type="2" bindtap="onChangeType">交友</button>
    <button size="mini" class="{{currentType === '3' ? 'select' : ''}}"  data-type="3" bindtap="onChangeType">LOST</button>
    <button size="mini" class="{{currentType === '4' ? 'select' : ''}}"  data-type="4" bindtap="onChangeType">出售</button>
  </view>

  <view class="forumlist" wx:for="{{list}}" wx:key="unique">
  	<view class="forumitem">
			<!-- 头像 名字 时间 -->
			<view class="topbar">
				<view class="avatar">
					<image src="{{item.avatar}}"/>
				</view>
				<view>
					<view class="name">{{item.name}}</view>
					<view class="time">7分钟前</view>
				</view>
			</view>

			<!-- 内容区 -->
  		<view class="content">
  			<view class="text">{{item.text}}</view>
  			<view class="piclist" wx:for="{{item.pics}}" wx:key="unique">
  				<image src="{{item}}"/>
  			</view>
			</view>

			<!-- 底部操作栏 -->
			<view class="actbar">
				<view><icon class="iconfont icon-fenxiang"></icon>17</view>
				<view><icon class="iconfont icon-taolunqu"></icon>12</view>
				<view><icon class="iconfont icon-dianzan"></icon>54</view>
  		</view>
  	</view>
	</view>

</view>
