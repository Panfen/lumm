/* pages/forum/forum.wxss */
.areaw-outwrap{
  width: 100%;
  padding: 0.4em 0;
  background: #fff;
  margin-bottom: 0.2em;
}
.areaw-outwrap .areawrap-innerwrap{
  display: flex;
  flex-direction: row;
}
.areaw-outwrap .areawrap-innerwrap .area{
  flex: 1;
  height: 6em;
  margin:0.2em;
  overflow: hidden;
  position: relative;
}
.areaw-outwrap .areawrap-innerwrap .area:first-child{
  margin-left:0.6em;
}
.areaw-outwrap .areawrap-innerwrap .area:last-child{
  margin-right:0.6em;
}
.areaw-outwrap .areawrap-innerwrap .area .textwrap{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0.2;
  background:linear-gradient(to top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0)); 
}
.areaw-outwrap .areawrap-innerwrap .area .textwrap label{
  display: inline-block;
  margin: 0.6em 0 0.4em 0.4em;
  font-size:0.8em;
  color:#fff;
}
.areaw-outwrap .areawrap-innerwrap .area image{
  height: 6em;
}

/*********/
.topicwrap .topic{
  display: flex;
  flex-direction: row;
  padding: 0.8em 0.6em 0.6em 0.7em;
  background: #fff;
  position: relative;
}
.topicwrap .topic:after{
  content: "";
  display: block;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  border-top: 1px solid #dedede; 
  transform: scaleY(0.5);
}
.topicwrap .topic image{
  width: 4.4em;
  height: 4.4em;
  margin-right: 0.4em;
  display: inline-block;
  border: 1px solid #eee;
}
.topicwrap .topic .content{
  flex: 1;
}
.topicwrap .topic .content label.title{
  font-size: 0.9em;
  display: block;
  color: #333;
  margin-bottom: 0.2em;
  font-weight: 700;
}
.topicwrap .topic .content view.desc{
  font-size: 0.8em;
  color:#666;
  height: 3.2em;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topicwrap .topic .content .ctrlbar{
  display: flex;
  justify-content:flex-end; 
}
.topicwrap .topic .content .ctrlbar .iconfont{
  margin-left: 1em;
}
.topicwrap .topic .content .ctrlbar .iconfont label{
  padding: 0 0.1em;
  font-size: 1em;
  width: 2em;
  display: inline-block;
  font-family:  Courier New,Console,Verdana,"微软雅黑";
}

/*font**/
@font-face {
	font-family: 'iconfont';
	src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
	font-weight: 500;
	font-style: normal;
}

.iconfont {
  position: relative;
  font-family:"iconfont" !important;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

